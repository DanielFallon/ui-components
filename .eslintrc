{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "settings": {
    "react": {
      "version": "16.0", 
    },
  },
  "env": {
    "es6": true
  },
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    // don't force es6 functions to include space before paren
    "space-before-function-paren": 0,

    // allow specifying true explicitly for boolean props
    "react/jsx-boolean-value": 0,

    "semi": [2, "always"],
  }
}
